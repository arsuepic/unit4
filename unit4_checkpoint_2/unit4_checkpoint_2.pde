color black   = #000000;
color white   = #FFFFFF;
color cream   = #FFFDD0;
color brown   = #964B00;
color orange  = #FFA500;
color skyblue = #87CEEB;

void setup() { // Start Setup =====================================================================================
  size(800, 800);
  background(white);

  stroke(black);
  strokeWeight(5);

  int i = 100;
  int j = 100;
  
  while (j < 800) { 
    float s = random(0.25,0.5);
    
    house(i, j,s);
    i += 200;
    
    if (i > 800) {
      i = 100;
      j += 200;
    }
  }
} // End Setup ====================================================================================================

void house(int x, int y, float s) { // Start house =========================================================================
  pushMatrix();
  translate(x, y);

  scale(s);
  
  roof();
  body();
  door();
  handle();
  window();
  
  scale(1/s);

  popMatrix();
} // End house ====================================================================================================

void roof() { // Start Roof =======================================================================================
  fill(brown);
  triangle(random(-200,-150), -100, random(-150, 150), random(-200,-125), random(150,200), -100);
} // End Roof =====================================================================================================

void body() { // Start Body =======================================================================================
  fill(cream);
  rect(-150, -100, 300, 300);
} // End Body =====================================================================================================

void door() { // Start Door =======================================================================================
  fill(orange);
  rect(-75, 50, random(50,100), 150);
} // End Door =====================================================================================================

void handle() { // Start Handle ===================================================================================
  fill(black);
  circle(-40, 125, 15);
} // End Handle ===================================================================================================

void window() { // Start Window ===================================================================================
  fill(random(0, 255), random(0, 255), random(0, 255));
  rect(50, random(-100,100), random(25, 75), random(25, 75));
} // End Window ===================================================================================================
